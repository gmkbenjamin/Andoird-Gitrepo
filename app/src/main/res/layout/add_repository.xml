<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_content_box"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_repository_name"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/addRepositoryName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_repository_mapping"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/addRepositoryMapping"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_repository_description"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/addRepositoryDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/addRepositoryActivate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_repository_activate"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="16sp"
            android:paddingLeft="48sp"
            android:checked="true" />

    </LinearLayout>

</ScrollView>